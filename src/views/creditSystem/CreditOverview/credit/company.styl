.company
  flex 1.8
  padding 30px 20px
  box-sizing border-box
  .company-content
    height 20vw
    min-height 320px
    display flex
    .company-chart-box
      width 50%
      height 100%
      position relative
      #company-chart
        width 100%
        height 100%
      .company-chart-title
        position absolute
        top 50%
        left 50%
        transform translate(-50%, -50%)
    .company-year
      width 50%
      height 100%
      min-width 320px
      .company-title
        font-size: 14px;
        font-family: PingFangTC-Medium, PingFangTC;
        font-weight: 500;
        color: #494949;
        margin-bottom 26px
      .company-box
        padding 64px 20px
        background #F8F9FA
        .company-info
          margin-bottom 30px
          background #F8F9FA
          .company-info-content
            display flex
            .company-info-left
              flex 1
              display flex
              align-items center
              .company-info-rect
                display inline-block
                height 10px
                width 10px
                background #3C5DA4
                margin-right 12px
              .company-info-other-rect
                display inline-block
                height 10px
                width 10px
                background #25BECD
                margin-right 12px
            .company-info-right
              flex 1
              padding-left 15px
.company-money
  display block
  font-size 18px
  font-weight bold
  color #394D78
  height 22px
  line-height 22px
.company-label
  display block
  font-size: 12px;
  color: #9AA6B8;
  line-height: 17px;