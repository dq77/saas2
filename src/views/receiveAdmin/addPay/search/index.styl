.search_box
  display: flex
  flex-direction: column
  align-items: center
  margin-bottom: 40px
  .search_input_container
    position: relative
    width: 736px
    margin-bottom: 25px
    .search_input
      height: 48px
      >>>input
        height: 100%
    .search_btns
      position: absolute
      right: 0
      top 0
      width: 168px
      height: 48px
      display: flex
      border-radius: 4px
      overflow: hidden
      cursor pointer
      span
        display: inline-block
        flex: 1
        color: #494949
        display: flex
        align-items: center
        justify-content: center
      span:nth-of-type(1)
        background-color: #3b68f0
        color: #fff
  .search_sort_container
    width: 100%
    position relative
    display: flex
    align-items: center
    justify-content: center
    color: #8997AE
    display: flex
    align-items: center
    .sort_box
      position: absolute
      left: 0
      top: -8px
