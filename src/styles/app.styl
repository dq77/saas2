color-danger = #f66
color-danger-hover = #f78989

*
  box-sizing border-box
html,body
  margin 0
  padding 0
  width 100%
  height 100%
  overflow hidden
  font-family 'Avenir', Helvetica, Arial, sans-serif
  font-size 12px
input,textarea
  font-family 'Avenir', Helvetica, Arial, sans-serif
a
  color #3b68f0
  text-decoration none
table
  border-collapse collapse
ul
  padding 0
  margin 0
  list-style-type none
input::-webkit-outer-spin-button,
input::-webkit-inner-spin-button
  -webkit-appearance: none !important
.el-input__inner
  &::placeholder
    color #CDD0D4
.page-main
  flex: 1
  padding 0 30px 20px
  width 100%
  min-width 1000px
// 块上方的标题
.page-title
  // padding-left 24px
  line-height 26px
  font-size 18px
  color #383b42
  font-weight bold
  // background url('./assets/page-title.png') left center no-repeat
  // background-size 18px
// .page-title-noicon
//   line-height 26px
//   font-size 18px
//   color #383b42
// 块
.page-block
  border-radius 8px
  background #fff

// 深蓝底，白字的按钮，主按钮
.page-button-deep-blue
  color #fff
  background #121A57
  &:hover
    color #fff
    background #121A57
    opacity .7
// 蓝底，白字的按钮，主按钮2
.page-button-blue
  color #fff
  background #3C5DA4
  &:hover
    color #fff
    background #3C5DA4
    opacity .7
// 浅蓝底，蓝字的按钮，主按钮3
.page-button-light-blue
  color #3C5DA4
  background #E8ECF7
  border-color #E8ECF7
  &:hover
    color #3C5DA4
    background #E8ECF7
    border-color #E8ECF7
    opacity .7
// 白底，灰字，灰框的按钮，次按钮
.page-button-white
  color #738A9E
  background #fff
// 灰底，白字的按钮，次按钮
.page-button-gray
  color #888B91
  background #3C5DA4
// 白底，蓝字，灰框的按钮
.page-button-white
  color #4a71f0
  background #fff
  border 1px solid #e0e7f4
  &:hover
    border 1px solid #e0e7f4
// 主布局，边界圆弧形态
.page-layout-main
  padding 20px
  background #fff
  min-height 400px
// 上中下三段布局
.page-layout-three-section
  display flex
  flex-direction column
.page-layout-three-section-1
  margin-bottom 20px
  .el-button + .el-button
    margin-left 10px
.page-layout-three-section-2
  flex 1
  padding 20px
  background #fff
.page-layout-three-section-3
  margin-top 20px
  margin-bottom 20px
  text-align center
  .el-button + .el-button
    margin-left 30px
// 详情左右布局
.page-collapse
  padding 0 20px
  background #ffff
.page-detail
  display flex
  align-items: flex-start;
  // border-top 1px solid #EBEEF5
  // padding 20px 0 0 0
  .page-detail-left
    flex 1
    padding 0 20px 0 0
  .page-detail-right
    flex 1
    padding 0 20px
    border-left 1px dashed #DCDFE6
  .page-detail-item
    font-size 12px
    color #738A9E
    span
      color #494949

// page section样式
.page-section
  margin-top 8px
  .page-section-title
    font-size 16px
    font-weight 400
    color #494949
    line-height 22px
    padding-bottom 9px
    margin-bottom 30px
    border-bottom 1px solid #DEE8F6
  &+.page-section
    padding-top 20px

