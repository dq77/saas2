// 审批单布局
// 标题
.page-layout-approval-title
  margin 30px 0
  font-size 20px
  color #353f51
// 描述列表
.page-layout-approval-desc-list
  margin-bottom 8px
  color #66788e
  line-height 30px
  li
    position relative
    padding-left 10px
    display inline-block
    margin-right 30px
