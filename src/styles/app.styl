.summary-header
  display flex
  justify-content flex-start
  .summary-logo
    font-size 40px
  .summary-title
    display flex
    margin-bottom 8px
    align-items center
  .summary-detail
    margin-left 14px
  .summary-icon
    font-size 40px
  .second-line
    .summary-icon
      background #53E0AF
  .summary-name
    font-size 12px
    color #7A869E
  .summary-amount
    font-size 22px
    font-weight bold
    color #383B42
  .summary-item
    width 20%
    margin-right 0.5%
    padding 5px 0 5px 1%
    border-right 1px solid #ECEEEF
  .summary-item:last-child
    margin-right 0
    border none
  .summary-item:first-child
    padding-left 0
.table
  width 100%
  font-size 12px
  th,td
    padding 8px 10px
    line-height 23px
    border 1px solid #ebeef5
  th
    background #f8fbfd
    text-align left
    color #909399
    font-weight 700
  td
    white-space normal
    word-break break-all
    color #606266
  &.table-layout-main
    font-size 12px
    line-height 23px
    th
      width 16%
    td
      width 34%

.table-header
  min-height 48px
  color #606266
  background #ebeef5
  font-size 12px
