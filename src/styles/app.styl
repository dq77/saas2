    .cell
      overflow visible
  .sort-caret
    border 4.5px solid transparent
  .sort-caret.ascending
    top 6px
  .sort-caret.descending
    bottom 8px
  .tip-cell // 右侧有tip图标的单元格
    margin-right 23px
  .sort-cell // 表头有排序图标的单元格
